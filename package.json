{
    "name": "angular-simple-tooltip",
    "version": "2.0.0",
    "description": "This package provides an Angular attribute directive and a service for showing tooltips declaratively or programmatically",
    "author": "Nhuy Van",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/nhuyvan/angular-simple-tooltip.git"
    },
    "keywords": [
        "tooltip",
        "angular tooltip"
    ],
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "build-me": "cp README.md LICENSE projects/angular-simple-tooltip && ng build angular-simple-tooltip",
        "lint": "eslint **/src/**/*.ts",
        "publish-me": "cd dist/angular-simple-tooltip && npm publish --access public && cd ../..",
        "prepare": "husky install"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~13.2.0",
        "@angular/common": "~13.2.0",
        "@angular/compiler": "~13.2.0",
        "@angular/core": "~13.2.0",
        "@angular/forms": "~13.2.0",
        "@angular/platform-browser": "~13.2.0",
        "@angular/platform-browser-dynamic": "~13.2.0",
        "@angular/router": "~13.2.0",
        "rxjs": "~7.5.4",
        "tslib": "^2.3.1",
        "zone.js": "~0.11.5"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~13.2.5",
        "@angular-eslint/eslint-plugin-template": "^13.1.0",
        "@angular-eslint/eslint-plugin": "^13.1.0",
        "@angular-eslint/template-parser": "^13.1.0",
        "@angular/cli": "~13.2.0",
        "@angular/compiler-cli": "~13.2.0",
        "@types/jasmine": "~3.10.3",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "eslint": "^8.10.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.9.7",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "husky": "^7.0.4",
        "jasmine-core": "~4.0.1",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "karma-jasmine": "~4.0.1",
        "karma": "~6.3.17",
        "ng-packagr": "^13.2.1",
        "typescript": "~4.5.5"
    },
    "lint-staged": {
        "**/*.ts": "eslint --cache --fix"
    }
}